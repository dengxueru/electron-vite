{
  "name": "vite-project",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "chcp 65001 && vite",
    "build": "vue-tsc -b && vite build && electron-builder --win",
    "preview": "vite preview"
  },
  "dependencies": {
    "sqlite3": "^5.1.7",
    "vue": "^3.5.13"
  },
  "build": {
    "asar": false,
    "appId": "com.example.viteelectron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "@electron/remote": "^2.1.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^2.2.0"
  }
}
